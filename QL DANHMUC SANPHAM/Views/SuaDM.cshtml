@model ShopMayTinh.Models.DANHMUC

@{
    ViewBag.Title = "Sửa DANH MỤC";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>SỬA DANH MỤC</h3>
<br>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2"><b>Mã danh mục</b></div>
            <div class="col-md-10">
                <h5>@Model.MaDM</h5>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Tên danh mục</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="font-weight: bold" type="submit" value="LƯU" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>

</div>
