
@using PagedList;
@using PagedList.Mvc;

@using ShopMayTinh.Models

@model PagedList.PagedList<SANPHAM>

@{
    ViewBag.Title = "Trang Chủ";
}

<div id="carousel-example" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel-example" data-slide-to="1" class="active"></li>
        <li data-target="#carousel-example" data-slide-to="2"></li>
        <li data-target="#carousel-example" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <a href="#"><img src="~/img/1.png" /></a>
            <div class="carousel-caption">
            </div>
        </div>
        <div class="item">
            <a href="#"><img src="~/img/2.png" /></a>
            <div class="carousel-caption">
            </div>
        </div>
        <div class="item">
            <a href="#"><img src="~/img/3.png" /></a>
            <div class="carousel-caption">
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#carousel-example" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>

<div class="page-header">
    <h3>TẤT CẢ SẢN PHẨM</h3>
</div>

<div class="row">
    @foreach (var linhkien in Model)
            {
        <div style="height: 446px" class="col-lg-4 col-md-6">
            <div class="thumbnail">
                <a href="@Url.Action("chitietSP","Home", new { id = linhkien.MaSP })">
                    <img style="height: 160px;" class="img-responsive" src="~/img/sanpham/@linhkien.HinhAnh" alt="">
                </a>
                <div class="caption">
                    <h4><b>@linhkien.TenSP</b></h4>
                </div>
                <center>
                    <button type="button" class="btn btn-warning btn-lg"><b>@linhkien.DonGia đ</b></button>
                    <br><br>

                    <button type="submit" class="btn btn-primary" onclick="AddToCart('@linhkien.MaSP')">
                        <b><span class="glyphicon glyphicon-shopping-cart"></span>Thêm vào giỏ</b>
                    </button>
                    <br><br>
                    <a href="@Url.Action("MuaLuon","GioHang", new { sMaSP = linhkien.MaSP })" type="button" class="btn btn-danger">
                        <b>MUA LUÔN</b>
                    </a>
                </center>
            </div>
        </div>
    }

    <div class="col-md-12">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    </div>

    <div class="col-md-12">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { trang = page }))
    </div>

</div>
