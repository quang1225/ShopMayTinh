
@{
    ViewBag.Title = "chitietSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h3>CHI TIẾT SẢN PHẨM</h3>
    <br>
    <div class="col-sm-4">
        <img class="img-responsive" src="~/img/sanpham/@Model.HinhAnh" alt="">
    </div>
    <div class="col-sm-8">

        <div style="color: red"><h4><b>@Model.TenSP</b></h4></div>
        <b>Hãng Sản Xuất:</b> @Model.HangSX
        <br>
        <b>Tình Trạng:</b> @Model.TinhTrang
        <br>
        <b>Mô Tả:</b> @Model.MoTa
        <br>
        <div style="color: red; float: right;"><h3><b><i>@string.Format("{0:0,0}", Model.DonGia) đ</i></b></h3></div>
        <br>
        <div style="text-align: center;">
            <button type="submit" class="btn btn-primary" onclick="AddToCart('@Model.MaSP')">
                <b><span class="glyphicon glyphicon-shopping-cart"></span>Thêm vào giỏ</b>
            </button>

            <a href="@Url.Action("MuaLuon","GioHang", new { sMaSP = Model.MaSP } )" class="btn btn-danger">
            <b>MUA LUÔN</b>
            </a>

        </div>
    </div>

    <div class="fb-comments" data-href="@Request.Url.ToString()" data-width="100%" data-numposts="5"></div>

</div>
