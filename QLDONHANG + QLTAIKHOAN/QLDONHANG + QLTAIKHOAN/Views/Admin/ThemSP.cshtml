@model ShopMayTinh.Models.SANPHAM

@{
    ViewBag.Title = "Thêm SẢN PHẨM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>THÊM SẢN PHẨM</h3>
<br>

@using (Html.BeginForm("ThemSP","Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class = "control-label col-md-2"><b>Tên sản phẩm</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control", } })
                @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Tên danh mục</b></div>
            <div class="col-md-10">
                @Html.DropDownList("MaDM")
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Hãng SX</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HangSX, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HangSX, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Tình trạng</b></div>
            <div class="col-md-10">
                <select class="form-control" name="TinhTrang" id="tinhtrang">
                    <option>moi</option>
                    <option>cu</option>
                </select>
                @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Đơn giá</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Ngày nhập</b></div>
            <div class="col-md-10">
                <input type="date" name="NgayNhap">
                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Hình ảnh</b></div>
            <div class="col-md-10">
                <input type="file" name="fileupload" required>
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Mô tả</b></div>
            <div class="col-md-10">
                <textarea name="Mota">Mô tả về sản phẩm...</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="font-weight: bold" type="submit" value="THÊM" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>

</div>
