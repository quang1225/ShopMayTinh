<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trang ADMIN</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

    <link href="~/Content/font-awesome.css" rel="stylesheet" />

</head>
<body>
    <div style="font-weight: bold" class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">ADMIN</div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Quản lý SẢN PHẨM", "QLsanpham", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý DANH MỤC", "QLdanhmuc", "Admin")</li>
                    <li>@Html.ActionLink("DS ĐƠN HÀNG", "DSdonhang", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý TÀI KHOẢN", "QLtaikhoan", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home"></span> về trang chủ Shop</a></li>
                    <li><a href="@Url.Action("DangXuat","Admin")">ĐĂNG XUẤT</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer style="background-color: #0574BB" class="footer">
        <br>
        <h4 style="color: white; font-weight: bold; text-align: center;"><i>Flat Template designed by  </i><span class="glyphicon glyphicon-copyright-mark"></span> Lê Hồng Quang</h4>
        <br>
    </footer>

    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>

    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
 
</body>
</html>

<noembed>  <!-- CHO KHOI HIEN QUANG CAO HOSTING -->